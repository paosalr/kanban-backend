{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "providers": [
                "php"
            ]
        }
    },
    "deploy": {
        "runtime": "V2",
        "numReplicas": 1,
        "startCommand": "php artisan serve --host=0.0.0.0 --port=${PORT}",
        "sleepApplication": false,
        "multiRegionConfig": {
            "us-east4-eqdc4a": {
                "numReplicas": 1
            }
        },
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}
