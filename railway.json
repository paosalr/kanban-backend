{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "providers": ["php"],
            "phases": {
                "setup": {
                    "nixPkgsRepo": "nixpkgs/nixpkgs",
                    "nixPkgsRev": "release-23.11",
                    "nixpkgs": ["php82", "php82Extensions.pdo_mysql", "composer", "sqlite"]
                }
            }
        }
    },
    "deploy": {
        "startCommand": "php artisan serve --host=0.0.0.0 --port=${PORT}"
    }
}
